<form
  action="/creat_event"
  enctype="multipart/form-data"
  method="post"
  id="creat_event"
  class="event-form"
>
  <h1>Event erstellen</h1>

  <div class="input-group">
    <label for="title">Event-Name</label>
    <input type="text" name="title" />
  </div>
  <div class="input-group">
    <label for="description">Beschreibung</label>
    <input type="text" name="description" />
  </div>
  <div class="input-group">
    <label for="place">Ort</label>
    <input type="text" name="place" />
  </div>
  <div class="input-group">
    <label for="date">Datum</label>
    <input type="date" name="date" />
  </div>
  <div class="input-group">
    <p>Bild auswählen</p>
    <button
      type="button"
      class="custom-file-btn"
      onclick="document.getElementById('image').click();"
    >
      Wählen Sie ein Bild
    </button>
    <!-- Verstecktes Datei-Upload-Feld. -->

    <input
      type="file"
      id="image"
      name="image"
      style="display: none;"
      accept="image/*"
      onchange="previewImage(event)"
    />

    <!-- Bereich für die Bildvorschau. -->

    <div id="image-preview" class="image-preview-container"></div>
  </div>
  <div class="input-group">
    <input type="submit" class="submit-btn" />
  </div>
</form>

<!-- CSS für die Bildvorschau -->

<style>
  .image-preview-container { margin-top: 10px; } .image-preview-container img {
  max-width: 100%; max-height: 200px; border: 1px solid #ccc; padding: 5px;
  border-radius: 5px; }
</style>

<!-- JavaScript zur Bildvorschau -->

<script>
  function previewImage(event) { const imagePreviewContainer =
  document.getElementById('image-preview'); const file = event.target.files[0];
  if (file) { const reader = new FileReader(); reader.onload = function(e) {
  imagePreviewContainer.innerHTML = `<img src="${e.target.result}" alt="Image
  Preview">`; }; reader.readAsDataURL(file); } else {
  imagePreviewContainer.innerHTML = ''; selected } }
</script>

